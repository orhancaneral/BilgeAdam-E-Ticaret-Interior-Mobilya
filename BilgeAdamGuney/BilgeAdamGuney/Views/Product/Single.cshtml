@using BilgeAdamGuney.Models
@model ProductListModel
@{
    ViewBag.Title = "Ürün";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <!--single-->
    <div class="single-wl3">
        <div class="container">
            <div class="single-grids">
                <div class="col-md-9 single-grid">
                    <div clas="single-top">
                        <div class="single-left">
                            <div class="flexslider">
                                <ul class="slides">
                                    <li data-thumb=@Model.ImagePath>
                                        <div class="thumb-image"> <img src=@Model.ImagePath data-imagezoom="true" class="img-responsive"> </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="single-right simpleCart_shelfItem">
                            <h4>@Model.Name</h4>
                            <p class="price item_price">@Model.Price ₺</p>
                            <div class="description">
                                <p><span>Açıklama : </span> @Model.Description</p>
                            </div>
                            <div class="women">
                                <a href="#" data-text="Add To Cart" data-product-id=@Model.Id class="my-cart-b item_add sepete-ekle">Sepetime Ekle</a>
                            </div>
                            <div class="social-icon">
                                <a href="#"><i class="icon"></i></a>
                                <a href="#"><i class="icon1"></i></a>
                                <a href="#"><i class="icon2"></i></a>
                                <a href="#"><i class="icon3"></i></a>
                            </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="col-md-3 single-grid1">
                    <h3>Benzer Ürünler</h3>
                    @foreach (var item in Model.ProductType.Products)
                    {
                        <div class="recent-grids">
                            <div class="recent-left">
                                <a href="@Url.Action("Single", "Product", new {id=item.Id })"><img class="img-responsive " src=@item.ImagePath alt=""></a>
                            </div>
                            <div class="recent-right">
                                <h6 class="best2"><a href="@Url.Action("Single", "Product", new {id=item.Id })">@item.Name </a></h6>
                                <span class=" price-in1">@item.Price ₺</span>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    }
                    
                   
                </div>
                <div class="clearfix"> </div>
            </div>

        </div>
    </div>
    <!--single-->
    <!--new-arrivals-->
</div>
