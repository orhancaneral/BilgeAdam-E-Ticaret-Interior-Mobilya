@using BilgeAdamGuney.Models
@model List<ProductListModel>

<table id="myTable" class="table table-hover">
    <thead>
        <tr id="myRow">
            <th class="col-xm-3 col-md-3" sorting" id="department_name" data-sort-by="Name">Adı</th>
            <th class="col-xm-2 col-md-2" sorting" id="department_name" data-sort-by="Name">Açıklama</th>
            <th class="col-xm-2 col-md-2" sorting" id="department_name" data-sort-by="Name">Kategori</th>
            <th class="col-xm-1 col-md-2" sorting" id="department_name" data-sort-by="Name">Fiyat</th>
            <th class="col-xm-1 col-md-1" sorting" id="department_name" data-sort-by="Name">Stok Miktarı</th>
            <th class="col-xm-1 col-md-2" sorting" id="department_name" data-sort-by="Name">Görsel</th>
            @*<th class="col-xm-6 col-md-6 sorting" data-sort-by="Description">Ürünler</th>*@
            <th class="col-xm-3 col-md-3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td class="col-xm-3 col-md-3">@item.Name</td>
                <td class="col-xm-3 col-md-3">@item.Description.Substring(0,50)</td>
                <td class="col-xm-2 col-md-2">@(item.ProductType != null ? item.ProductType.Name : null)</td>
                <td class="col-xm-1 col-md-2">@item.Price</td>
                <td class="col-xm-1 col-md-1">@item.UnitsInStock</td>
                <td class="col-xm-1 col-md-2">
                    <img src="@item.ImagePath" style="width:30%;" />
                </td>
                <td class="col-xm-3 col-md-3 text-right" style="padding-bottom:2px">
                    @Html.ActionLink("Güncelle", "Edit", "Department", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Sil", "Delete", "Department", new { id = item.Id }, new
               {
                   @class = "btn btn-danger",
                   onclick = "return confirm('Bu kaydı silmek istediğinize emin misiniz?');"
               })
                </td>
            </tr>
        }
    </tbody>
</table>
