
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--banner-->
<div class="banner-w3">
    <div class="demo-1">
        <div id="example1" class="core-slider core-slider__carousel example_1">
            <div class="core-slider_viewport">
                <div class="core-slider_list">
                    <div class="core-slider_item">
                        <img src="~/assets/img/slider/tekno_fotosu.jpg"  class="img-responsive" alt=""/>
                    </div>
                    <div class="core-slider_item">
                        <img src="~/assets/img/slider/b5.jpg" class="img-responsive" alt=""/>
                    </div>
                    <div class="core-slider_item">
                        <img src="~/assets/img/slider/banner_3.jpg" class="img-responsive" alt=""/>
                    </div>
                    <div class="core-slider_item">
                        <img src="~/assets/img/slider/luxe25.jpg.jpg" class="img-responsive" alt=""/>
                    </div>
                    <div class="core-slider_item">
                        <img src="~/assets/img/slider/slid2.jpg" class="img-responsive" alt=""/>
                    </div>
                    <div class="core-slider_item">
                        <img src="~/assets/img/slider/social-housing-lead.jpg" class="img-responsive" alt=""/>
