        $('#example1').coreSlider({
            pauseOnHover: false,
            interval: 3000,
            controlNavEnabled: true
        });

    </script>

</div>
<!--banner-->

<div class="content">
    <!--banner-bottom-->
    <div class="ban-bottom-w3l">
        <div class="container">
            <div class="col-md-6 ban-bottom">
                <div class="ban-top">
                    <img src="~/assets/img/owner/turner_lift_top_coffee_table_espresso_coffee_tables_at_hayneedle_is_also_a_kind_of_espresso_lift_top_coffee_table_1.jpg"class="img-responsive" alt="" />
                    <div class="ban-text">
                        <h4>Yalın</h4>
                    </div>
                    <div class="ban-text2 hvr-sweep-to-top">
                        <h4>%50 <span>İndirim</span></h4>
                    </div>
                </div>
            </div>
            <div class="col-md-6 ban-bottom3">
                <div class="ban-top">
                    <img src="~/assets/img/owner/Driftwood Bed 800x800.jpg" class="img-responsive" alt=""/>
                    <div class="ban-text1">
                        <h4>Modern Tasarımlar</h4>
                    </div>
                </div>
                <div class="ban-img">
                    <div class=" ban-bottom1">
                        <div class="ban-top">
                            <img src="~/assets/img/owner/indian-wicker-furniture.jpg" class="img-responsive" alt=""/>
                            <div class="ban-text1">
                                <h4>%20</h4>
                            </div>
                        </div>
                    </div>
                    <div class="ban-bottom2">
                        <div class="ban-top">
                            <img src="~/assets/img/owner/PH129595_Lounging_relaxing_furniture.jpg"class="img-responsive" alt="" />
                            <div class="ban-text1">
                                <h4>Ferah</h4>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!--banner-bottom-->
    <!--Products-->
    <div class="product-agile">
        <div class="container">
            <h3 class="tittle1"> Yeni Eklenenler</h3>
            <div class="slider">
                <div class="callbacks_container">
                    <ul class="rslides" id="slider">
                        <li>
                            <div class="caption">
                                @foreach (var item in ViewBag.LastProductsFirst)
                                {
                                    <div class="col-md-3 cap-left simpleCart_shelfItem">
                                        <div class="grid-arr">
                                            <div class="grid-arrival">
                                                <figure>
                                                    <a href="@Url.Action("Single", "Product", new {id=item.Id })">
                                                        <div class="grid-img">
                                                            @if(item.ImagePath!=null)
                                                            {
                                                                <img src="@item.ImagePath" class="img-responsive product-image" alt="">
                                                            }
                                                            else
                                                            {
                                                                <img src="~/assets/img/owner/defaultImage.jpg" class="img-responsive product-image" alt="">
                                                            }
                                                        </div>
                                                        @*<div class="grid-img">
                                                            <img src="~/_templates/web/images/p13.jpg" class="img-responsive" alt="">
                                                        </div>*@
                                                    </a>
                                                </figure>
                                            </div>
                                            <div class="women">
                                                <h6><a href="@Url.Action("Single", "Product", new {id=item.Id })">@item.Name</a></h6>
                                                <p><del></del><em class="item_price">@item.Price &#8378;</em></p>
                                                <a href="#" data-text="Add To Cart" data-product-id=@item.Id class="my-cart-b item_add sepete-ekle">Sepete Ekle</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="clearfix"></div>
                            </div>
                        </li>


                        <li>
                            <div class="caption">
                                @foreach (var item in ViewBag.LastProductsSecond)
                                {
                                    <div class="col-md-3 cap-left simpleCart_shelfItem">
                                        <div class="grid-arr">
                                            <div class="grid-arrival">
                                                <figure>
                                                    <a href="@Url.Action("Single", "Product", new {id=item.Id })">
                                                        <div class="grid-img">
                                                            @if (item.ImagePath != null)
                                                            {
                                                                <img src="@item.ImagePath" class="img-responsive product-image" alt="">
                                                            }
                                                            else
                                                            {
                                                                <img src="~/assets/img/owner/defaultImage.jpg" class="img-responsive product-image" alt="">
                                                            }
                                                        </div>
                                                        @*<div class="grid-img">
                                                                <img src="~/_templates/web/images/p13.jpg" class="img-responsive" alt="">
                                                            </div>*@
                                                    </a>
                                                </figure>
                                            </div>
                                            <div class="women">
                                                <h6><a href="@Url.Action("Single", "Product", new {id=item.Id })">@item.Name</a></h6>
                                                <p><del></del><em class="item_price">@item.Price &#8378;</em></p>
                                                <a href="#" data-text="Add To Cart" data-product-id=@item.Id class="my-cart-b item_add sepete-ekle">Sepete Ekle</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="clearfix"></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--Products-->
</div>
