@using BilgeAdamGuney.Models
@model MemberResetPassword
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <!--login-->
    <div class="login">
        <div class="main-agileits">
            <div class="form-w3agile">
                <h3>Login To New Shop</h3>
                @if (TempData["ResultMessage"] != null)
                {
                <div class="form-group alert alert-info">
                    @TempData["ResultMessage"]
                    @Html.ValidationSummary()
                </div>
                }
                @using (Html.BeginForm("ResetPassword", "Member", FormMethod.Post, new { @id = "form" }))
                {
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @id = "password", @class = "form-control", @placeholder = "Yeni Şifre" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "confirm_password", @class = "form-control", @placeholder = "Yeni Şifre Tekrar" })
                        @Html.ValidationMessage("ApprovePassword")
                    </div>

                    <button type="submit" class="btn btn-rounded">Yeni Şifremi Kaydet</button>
                }
            </div>
        </div>
    </div>
    <!--login-->
</div>