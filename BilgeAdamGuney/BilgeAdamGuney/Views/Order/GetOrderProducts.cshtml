@using BilgeAdamGuney.Models
@model List<OrderDetailModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="cart-items">
        <div class="container">
            <h2>Siparişi Verilen Ürünler (@Model.Count)</h2>
            
            @foreach (var item in Model)
            {
                <div class="cart-header">
                    <div class="cart-sec simpleCart_shelfItem">
                        <div class="cart-item cyc">
                            <img src="@item.Product.ImagePath" class="img-responsive" alt="">
                        </div>
                        <div class="cart-item-info">
                            <h3><a href="#"> @item.Product.Name </a></h3>

                            <div class="delivery">
                                <p>Toplam : @item.Product.Price</p>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
